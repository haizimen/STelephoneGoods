                <TextView
                    android:textSize="@dimen/tsize_13"
                    android:textColor="@color/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23.0dip"
                    android:text="如有关于订单的疑问，可以在售后中心，直接戳小象留言，我们会尽快处理。"
                    android:lineSpacingExtra="23.0dip" />
                <TextView
                    android:textSize="@dimen/tsize_13"
                    android:textColor="@color/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_40"
                    android:text="消费者告知书" />
                <TextView
                    android:textSize="@dimen/tsize_13"
                    android:textColor="@color/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_40"
                    android:text="尊敬的客户：" />
                <TextView
                    android:textSize="@dimen/tsize_13"
                    android:textColor="@color/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23.0dip"
                    android:text="在您选购小象优品的商品前，请仔细阅读此文，同意本文告知内容后再进行下单购买："
                    android:lineSpacingExtra="23.0dip" />
