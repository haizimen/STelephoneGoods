<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phone1000.stelephonegoods.activities.AddNewAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_address_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:src="@mipmap/login_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center"
            android:paddingRight="25dp"
            android:text="添加新地址"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="  *收 件 人:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/add_address_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="  *手机号码:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/add_address_phonenum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:lines="11"
            android:background="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="  *省 市 区:"
            android:textColor="#000" />

        <Spinner
            android:layout_gravity="center_vertical"
            android:popupBackground="#fff"
            android:id="@+id/add_address_province"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="▽"
            android:textSize="16sp" />

        <Spinner
            android:layout_gravity="center_vertical"
            android:scrollbars="none"
            android:gravity="center_vertical"
            android:popupBackground="#fff"
            android:id="@+id/add_address_city"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="▽"
            android:textSize="16sp" />

        <Spinner
            android:layout_gravity="center_vertical"
            android:scrollbars="none"
            android:gravity="center_vertical"
            android:popupBackground="#fff"
            android:id="@+id/add_address_area"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="▽"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="  *详细地址:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/add_address_location_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="   设为默认地址:"
            android:textColor="#000" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff" />

        <CheckBox
            android:id="@+id/add_address_isdefault"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:checked="true"
            android:background="@drawable/add_address_checbox_bg_selector"
            android:button="@null" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#fff" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff" />

    <Button
    android:layout_marginTop="1dp"
    android:id="@+id/add_address_verify"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#fff"
    android:text="保存新地址"
    android:textColor="@color/colorAccent"

    />
</LinearLayout>
