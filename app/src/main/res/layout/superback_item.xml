<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"

    >
<LinearLayout
    android:background="#ffffff"
    android:layout_marginTop="10dp"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/super_image"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:id="@+id/linear_wuxiao"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/super_image"
        android:orientation="horizontal"
        android:background="@drawable/superback_textvalue_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_gravity="center_vertical"
            android:text="每件赚: ￥"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/super_value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!!"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/superback_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:lines="2"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/linear_wuxiao"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="内容提供者"
        android:paddingTop="5dp"
        />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/relative_onclick"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_alignBottom="@+id/superback_title_content"
        android:background="@drawable/superback_yellow"
        >
    <ImageView
        android:id="@+id/relae_super_image"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@mipmap/up1"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginEnd="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="立即赚钱"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:textColor="#A15D1B"
            />
    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>