<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phone1000.stelephonegoods.activities.LoginActivity">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_head_height"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/login_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textSize="20dp"
            android:text="登陆"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/login_registe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="注册"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
<android.support.design.widget.TabLayout
    android:id="@+id/login_tablayout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_tablayout_height">

</android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:background="#fff"
        android:id="@+id/login_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
