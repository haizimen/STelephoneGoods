<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phone1000.stelephonegoods.activities.RegistActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/regist_back"
            android:layout_width="30dp"
            android:src="@mipmap/login_back"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="注册"
            android:textColor="#000"
            android:paddingRight="25dp"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_height="@dimen/login_edittext_height">
        <EditText
            android:id="@+id/regist_edittext_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:inputType="number"
            android:hint="   手机号码"
            android:paddingLeft="10dp"
            android:maxLength="11"
            android:drawableLeft="@mipmap/phone"/>
        <CheckBox
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/login_send_identifycode_btn"
            android:textColor="@drawable/login_send_identifycode_btntext_color"
            android:text="发送验证码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_height="@dimen/login_edittext_height">
        <EditText
            android:id="@+id/regist_edittext_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:hint="   密码"
            android:inputType="textVisiblePassword"
            android:paddingLeft="10dp"
            android:maxLength="11"
            android:drawableLeft="@mipmap/identyfingcode"/>
        <CheckBox
            android:id="@+id/regist_password_show"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/login_can_seepasswod_bg"
            />
    </LinearLayout>

    <Button
        android:id="@+id/regist_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="注册"
        android:enabled="false"
        android:background="@drawable/login_button_bg_selector"
        android:textSize="19sp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <CheckBox
            android:checked="true"
            android:id="@+id/regist_protocol_agree"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
        <TextView
            android:id="@+id/regist_protocol"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="注册同意  《小象优品用户协议》"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>
